<% answers = locals[:answers] %>
<% answers.each do |answer| %>
<div class="panel panel-reveal">
  <div class="panel-body text-center">
    <h3><%= answer[:label] %></h3>
    <p class="image_container">
      <img src="//placehold.it/240x240" alt="">
    </p>
    <%= partial 'templates/generator_truth-bombs', locals: {truth_bombs: answer[:truth_bombs]} %>
  </div>
</div>
<% end %>
